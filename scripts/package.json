{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "@terminal-nerd/scripts",
	"homepage": "https://github.com/terminal-nerds/terminal-nerd/blob/main/scripts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/terminal-nerds/terminal-nerd.git"
	},
	"bugs": {
		"url": "https://github.com/terminal-nerds/terminal-nerd/issues"
	},
	"type": "module",
	"scripts": {
		"build": "tsc --build",
		"clean:all": "run-s clean:build clean:node",
		"clean:build": "rimraf ./build",
		"clean:node": "rimraf ./node_modules",
		"format": "prettier --write .",
		"lint": "run-s lint:* --continue-on-error",
		"lint:format": "prettier --check .",
		"lint:types": "tsc --noEmit"
	}
}
