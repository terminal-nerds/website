{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "terminal-nerd",
	"homepage": "https://github.com/terminal-nerds/terminal-nerd",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/terminal-nerds/terminal-nerd.git"
	},
	"bugs": {
		"url": "https://github.com/terminal-nerds/terminal-nerd/issues"
	},
	"type": "module",
	"devDependencies": {
		"@commitlint/config-conventional": "^13.1.0",
		"@types/node": "^16.7.5",
		"commitlint": "^13.1.0",
		"gacp": "^2.10.2",
		"markdownlint": "^0.24.0",
		"markdownlint-cli": "^0.28.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"tslib": "^2.3.1",
		"typescript": "^4.4.2"
	},
	"scripts": {
		"build": "pnpm run build --filter ./",
		"clean:all": "run-s clean:build clean:node",
		"clean:build": "pnpm run clean:build --filter ./",
		"clean:node": "pnpm run clean:node --filter ./ && rimraf ./node_modules",
		"commit": "gacp",
		"format": "prettier --write .",
		"lint": "run-s lint:* --continue-on-error",
		"lint:commit": "commitlint --verbose --from \"develop\" --to \"HEAD\"",
		"lint:format": "prettier --check .",
		"lint:types": "pnpm run lint:types --filter ./",
		"lint:md": "markdownlint \"**/*.md\" --ignore \"node_modules/\"",
		"start": "pnpm run start --filter ./"
	}
}
