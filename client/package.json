{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "@terminal-nerd/client",
	"homepage": "https://github.com/terminal-nerds/terminal-nerd/blob/main/client",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/terminal-nerds/terminal-nerd.git"
	},
	"bugs": {
		"url": "https://github.com/terminal-nerds/terminal-nerd/issues"
	},
	"type": "module",
	"devDependencies": {
		"@terminal-nerd/common": "workspace:*",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.4",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	},
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"clean:all": "run-s clean:build clean:node",
		"clean:build": "rimraf ./build",
		"clean:node": "rimraf ./node_modules",
		"format": "pretty-quick --verbose --write",
		"lint": "run-s lint:* --continue-on-error",
		"lint:format": "pretty-quick --branch develop --check --verbose",
		"lint:js": "eslint . --ignore-path ../.eslintignore --ext .json,.ts,.yaml,.yml,.vue --format codeframe",
		"lint:types": "tsc --noEmit"
	}
}
